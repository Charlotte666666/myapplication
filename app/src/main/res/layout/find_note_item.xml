<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/item_notes_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxWidth="280dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="我的心情"
            android:textColor="@color/black_trans80"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/item_notes_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_notes_title_tv"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:maxWidth="280dp"
            android:paddingLeft="8dp"
            android:textColor="@color/black_trans40"
            android:text="今天，注定是一个不平凡的日子，繁花似锦却多处了几分伤秋；我念念去，却得不到一丝的......"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_notes_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_notes_content_tv"
            android:layout_marginLeft="16dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="2016-09-24 18:26 星期日"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
